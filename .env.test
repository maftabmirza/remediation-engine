# Test Environment Configuration
# This file contains environment variables for pytest tests

# Database Configuration - Test Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aiops_test
POSTGRES_USER=aiops
POSTGRES_PASSWORD=aiops_secure_password

# Authentication
JWT_SECRET=test-jwt-secret-key-for-testing-only
ENCRYPTION_KEY=test-encryption-key-32chars-ok!
SECRET_KEY=test-secret-key-for-testing

# Environment
ENVIRONMENT=test
LOG_LEVEL=DEBUG

# LLM Provider (Mock - do NOT use real API keys in tests)
ANTHROPIC_API_KEY=test-mock-anthropic-key
OPENAI_API_KEY=test-mock-openai-key

# Redis (Optional for caching tests)
REDIS_URL=redis://localhost:6379/1

# Test Settings
SKIP_EXTERNAL_TESTS=true        # Skip tests requiring external services
MOCK_LLM_RESPONSES=true         # Use mock LLM responses instead of real API calls
MOCK_SSH_CONNECTIONS=true       # Use mock SSH instead of real connections

# Coverage Settings
COVERAGE_MIN_PERCENTAGE=80

# Performance Test Settings
PERFORMANCE_TEST_ITERATIONS=100
PERFORMANCE_TEST_TIMEOUT=30
