# Test environment Dockerfile
# Uses the same base as production but includes test dependencies

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies including Playwright dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    git \
    # Playwright browser dependencies
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libatspi2.0-0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libasound2 \
    libpango-1.0-0 \
    libcairo2 \
    libxshmfence1 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install core test packages with their dependencies
RUN pip install --no-cache-dir pytest pytest-asyncio pytest-cov pytest-mock pytest-xdist httpx faker freezegun nest-asyncio

# Install Playwright for E2E UI testing
RUN pip install --no-cache-dir pytest-playwright playwright

# Install Playwright browsers (Chromium only to save space)
RUN playwright install chromium

# Ensure pydantic 2.x is used (requirements.txt version)
RUN pip install --no-cache-dir 'pydantic>=2.0'

# Copy application and test code
COPY app/ ./app/
COPY tests/ ./tests/
COPY alembic/ ./alembic/
COPY static/ ./static/
COPY templates/ ./templates/
COPY alembic.ini .
COPY pytest.ini .

# Set environment for tests
ENV PYTHONPATH=/app
ENV POSTGRES_HOST=postgres-test
ENV POSTGRES_DB=aiops_test

# Default command runs migrations then tests
CMD ["sh", "-c", "alembic upgrade head && pytest tests/ -v --tb=short"]
