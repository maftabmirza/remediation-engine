# Test environment Dockerfile
# Uses the same base as production but includes test dependencies

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install core test packages with their dependencies
RUN pip install --no-cache-dir pytest pytest-asyncio pytest-cov pytest-mock pytest-xdist httpx faker freezegun

# Ensure pydantic 2.x is used (requirements.txt version)
RUN pip install --no-cache-dir 'pydantic>=2.0'

# Copy application and test code
COPY app/ ./app/
COPY tests/ ./tests/
COPY alembic/ ./alembic/
COPY static/ ./static/
COPY templates/ ./templates/
COPY alembic.ini .
COPY pytest.ini .

# Set environment for tests
ENV PYTHONPATH=/app
ENV POSTGRES_HOST=postgres
ENV POSTGRES_DB=aiops_test

# Default command runs tests
CMD ["pytest", "tests/", "-v", "--tb=short"]
