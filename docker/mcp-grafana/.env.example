# MCP Grafana Server Configuration
# Copy this file to .env and fill in your values

# Grafana Connection (Required)
GRAFANA_URL=http://grafana:3000
GRAFANA_SERVICE_ACCOUNT_TOKEN=your_service_account_token_here

# MCP Server Configuration
MCP_SERVER_PORT=8080
MCP_EXTERNAL_PORT=8081
LOG_LEVEL=info

# Network Configuration
NETWORK_NAME=aiops-network

# Optional: Direct datasource URLs (if not using Grafana proxying)
PROMETHEUS_URL=
LOKI_URL=
TEMPO_URL=

# Example production values:
# GRAFANA_URL=https://grafana.example.com
# GRAFANA_SERVICE_ACCOUNT_TOKEN=glsa_xxxxxxxxxxxxxxxxxxxxx
# LOG_LEVEL=warn
# MCP_EXTERNAL_PORT=8081
